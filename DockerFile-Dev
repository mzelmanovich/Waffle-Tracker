# download node 10.1.0 docker files
FROM node:latest

# switch docker dir to working dir
RUN mkdir -p /usr/app
WORKDIR /usr/app

# copy files
COPY package*.json /usr/app/
COPY . /usr/app/

# run install
RUN npm install -g typescript
RUN npm install -g webpack-dev-server webpack
RUN npm install

# make port exposed
EXPOSE 80

# run npm
CMD [ "npm", "run", "start:dev" ]